<record model="ir.values" id="ir_open_journal_period">
    <field name="key2">tree_but_open</field>
    <field name="model">o2clinic.doctors</field>
    <field name="name">Open Journal</field>
   <!--  <field name="value" eval="'ir.actions.wizard,%d'%action_move_journal_line_form_select"/> -->
    <field name="object" eval="True"/>
</record>
	


		<!-- Search Doctors -->
		<record id="doctors_search" model="ir.ui.view">
			<field name="name">Doctors Search</field>
			<field name="model">o2clinic.doctors</field>
			<field name="arch" type="xml">
				<search>
					<field name="name"/>
					<field name="gender"/>
					 
					<filter string="Male" domain="[('gender','=','male')]"/>
						<filter string="Female" domain="[('gender','=','female')]"/>
					<filter string="Active" domain="[('active','=',True)]"/>
					<group>
						<filter string="clinics" domain="[]" context="{'group_by':'clinic_id'}"/>
						<filter string="specialists" domain="[]" context="{'group_by':'specialist_id'}"/>
						<filter string="active" domain="[]" context="{'group_by':'active'}"/>
						<filter string="gender" domain="[]" context="{'group_by':'gender'}"/>
					</group>
				</search>
			</field>
		</record>



<record id="product_normal_form_view" model="ir.ui.view">
<field name="name">product.normal.form.inherit</field>
<field name="model">o2clinic.services</field>
<field name="inherit_id" ref="product.product_normal_form_view"/>
<field name="arch" type="xml">
<field name="id" position="after">

</field>
</field>
</record>





		<!-- o2clinic.appoinements Tree -->
		<record id="reservations_tree" model="ir.ui.view">
			<field name="name">appoinements Tree</field>
			<field name="model">o2clinic.appoinements</field>

			<field name="arch" type="xml">
				<tree colors="blue:state == 'on_hold';green:state=='open';red:state == 'close'" >
					<field name="id" string="Reservation ID"/>
					<field name="patient_id" string="Patient"/>
					<field name="patient_gender"/>
					<field name="active"  string="Urgent"/>
					<field name="appointment_time"  string="Reservation Start"/>
					<field name="patient_id" string="Dentist" widget="Many2one"/>
					<field name="patient_id" string="Room"/>
					<field name="waiting_time"  string="Waiting time"/>
					<field name="patient_id" string="Patient Status"/>
					<field name="state"/>
					 
				</tree>
			</field>
		</record>





	<record model="ir.ui.view" id="resource_kanban_view">
    <field name="name">doctors</field>
    <field name="model">o2clinic.doctors</field>
    <field name="type">kanban</field>
    <field name="arch" type="xml">
        <kanban create="false" >
            <templates>
                <t t-name="kanban-box">
                    <div class="oe_resource_vignette oe_kanban_global_click">
                        <div class="oe_resource_image">

                            <a type="edit"><img t-att-src="kanban_image('o2clinic.doctors', 'image', record.id.value)"  width="50" height="100" class="oe_kanban_avatar pull-left" /></a>
                        </div>
                      
                                 <div t-attf-class="oe_kanban_content">                         
    <label for="available" t-attf-class="oe_kanban_status {{ available == TRUE ? 'oe_kanban_status_green' : 'oe_kanban_status_red' }} pull-right "/>
                                    <b>Doctor name:</b>
                                    <field name="name"   />
                                    <br/>
                                    <b>Clinic Name:</b>
                                    <field name="clinic_id"/>
                                    <br/>
                                    <b>Available:</b>
                                      :
                                    <field name="available"/>
                                      <br/>
                                      <b> waiting_time:</b>
                                     
                                    <field name="waiting_time" />
                                      <br/>
                                      <b> next book after:</b>
                                     
                                    <field name="next_book" />
  <br/>
                                      <b> next book NUM:</b>
                                     
                                    <field name="next_book_num" />

                                </div>

                      </div>                      
                </t>
            </templates>
        </kanban>
    </field>
</record>  
		




 	

